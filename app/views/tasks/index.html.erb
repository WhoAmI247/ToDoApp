<div class="container">
  <div class="bg-title">
    <div class="title-header">ToDo</div>
    <div>Welcome to the tutorial's ToDoApplication</div>
    <div><%= link_to 'New task', new_task_path, { :class=> 'link-new-task' }%></div>
  </div>
  
  <p id="notice"><%= notice %></p>
  
  
  <table class="">
    <thead>
      <tr class="row">
        <th class="col-md-3">Title</th>
        <th class="col-md-3">Created At</th>
        <th class="col-md-3">Completed</th>
        <th colspan="3" class="col-md-3 col-md-push-1">Action</th>
      </tr>
    </thead>
  
    <tbody>
      <% @tasks.each do |task| %>
        <tr class="row">
          <td class="col-md-3"><%= task.title %></td>
          <td class="col-md-3"><%= task.created_at.strftime("%A %-d-%-m-%y %I:%M %p") %></td>
          <td class="col-md-3"><%= task.completed.strftime("%A %-d-%-m-%y %I:%M %p") %></td>
          <td class="col-md-1"><%= link_to edit_task_path(task), { :class=>'link-to-edit'} do %><i class="fa fa-pencil-square-o" aria-hidden="true"> <%end%></td>
          <td class="col-md-1"><%= link_to task, {:class=>'link-to-delete'}, method: :delete, data: { confirm: 'Are you sure?'} do %> <i class="fa fa-times" aria-hidden="true"></i> <%end%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="pop-up">
  
</div>